extends layout

include mixins/_podcastCard
include mixins/_videoCard
include mixins/_pagination

block content
  .inner
    h2 Latest Tutorials
    .stores
      each video in videos
        +videoCard(video)
    .flex-center
      a.button.button--show-all(href='/videos') See All
    h2(style='margin-top: 75px') Latest Podcast Episodes
    .stores
      each podcast in podcasts
        +podcastCard(podcast)
    .flex-center
      a.button.button--show-all(href='/podcast') See All


