extends layout

include mixins/_videoCard
include mixins/_podcastCard

block content
  .inner
    h2 YouTube Playlists
    ul.tags
      each t in tags2
        li.tag
          a.tag__link(href=`/tags/${t._id}` class=(t._id === tag ? 'tag__link--active' : ''))
            span.tag__text= t._id
            span.tag__count= t.count
    .stores
      each video in videos
        +videoCard(video)
    h2 Podcast Tags
    ul.tags
      each t in tags
        li.tag
          a.tag__link(href=`/tags/${t._id}` class=(t._id === tag ? 'tag__link--active' : ''))
            span.tag__text= t._id
            span.tag__count= t.count
    .stores
      each podcast in podcasts
        +podcastCard(podcast)
